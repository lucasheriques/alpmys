<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CadastroEventoActivity"
    tools:showIn="@layout/activity_cadastro_evento">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewNome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="9dp"
            android:text="@string/lbl_nome"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextNomeEvento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Pagode do Werneck"
            android:inputType="textPersonName"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="@+id/textViewNome"
            app:layout_constraintStart_toStartOf="@+id/textViewNome"
            app:layout_constraintTop_toBottomOf="@+id/textViewNome" />

        <TextView
            android:id="@+id/textViewData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:text="@string/lbl_data"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="@+id/editTextNomeEvento"
            app:layout_constraintStart_toStartOf="@+id/editTextNomeEvento"
            app:layout_constraintTop_toBottomOf="@+id/editTextNomeEvento" />

        <br.com.sapereaude.maskedEditText.MaskedEditText
            android:id="@+id/editTextData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="@+id/textViewData"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/textViewData"
            app:layout_constraintTop_toBottomOf="@+id/textViewData"
            app:mask="##/##/####" />

        <TextView
            android:id="@+id/textViewHoraInicio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/lbl_horario_inicio"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="@+id/editTextData"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/editTextData"
            app:layout_constraintTop_toBottomOf="@+id/editTextData" />

        <br.com.sapereaude.maskedEditText.MaskedEditText
            android:id="@+id/editTextHoraInicio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="time"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="@+id/textViewHoraInicio"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/textViewHoraInicio"
            app:layout_constraintTop_toBottomOf="@+id/textViewHoraInicio"
            app:mask="##:##" />

        <TextView
            android:id="@+id/textViewHoraTermino"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/lbl_horario_termino"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="@+id/editTextHoraInicio"
            app:layout_constraintStart_toStartOf="@+id/editTextHoraInicio"
            app:layout_constraintTop_toBottomOf="@+id/editTextHoraInicio" />

        <br.com.sapereaude.maskedEditText.MaskedEditText
            android:id="@+id/editTextHoraTermino"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="time"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="@+id/textViewHoraTermino"
            app:layout_constraintStart_toStartOf="@+id/textViewHoraTermino"
            app:layout_constraintTop_toBottomOf="@+id/textViewHoraTermino"
            app:mask="##:##" />

        <TextView
            android:id="@+id/textViewDescricao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/lbl_descricao"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="@+id/editTextHoraTermino"
            app:layout_constraintStart_toStartOf="@+id/editTextHoraTermino"
            app:layout_constraintTop_toBottomOf="@+id/editTextHoraTermino" />

        <EditText
            android:id="@+id/editTextDescricao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="o evento contara com a presenÃ§a do ilustre Marcelo Werneck..."
            android:inputType="textMultiLine"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="@+id/textViewDescricao"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/textViewDescricao"
            app:layout_constraintTop_toBottomOf="@+id/textViewDescricao" />

        <Button
            android:id="@+id/buttonCadastroEvento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Button"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="@+id/editTextDescricao"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/editTextDescricao"
            app:layout_constraintTop_toBottomOf="@+id/editTextDescricao" />

    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>